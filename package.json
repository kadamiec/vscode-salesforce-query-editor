{
  "name": "salesforce-soql-editor",
  "displayName": "Salesforce SOQL Editor",
  "publisher": "allanoricil",
  "preview": false,
  "author": {
    "name": "Allan Oricil",
    "email": "allanoricilcos@outlook.com"
  },
  "homepage": "https://github.com/AllanOricil/SOQL-Editor-Issues/blob/master/README.md",
  "description": "Run SOQL without leaving VSCode",
  "repository": {
    "type": "git",
    "url": "https://github.com/AllanOricil/SOQL-Editor-Issues.git"
  },
  "icon": ".images/icon.png",
  "galleryBanner": {
    "color": "#232323",
    "theme": "dark"
  },
  "version": "0.10.2",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "soql editor",
    "salesforce",
    "sfdx"
  ],
  "activationEvents": [
    "workspaceContains:sfdx-project.json",
    "onCommand:SFDX.soqlEditor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "SFDX.soqlEditor",
        "title": "SFDX: SOQL Editor",
        "icon": {
          "light": "/.images/icon_light.png",
          "dark": "/.images/icon_dark.png"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "SFDX.soqlEditor",
          "group": "navigation",
          "when": "resourceFilename =~ /.cls/"
        }
      ],
      "explorer/context": [
        {
          "command": "SFDX.soqlEditor",
          "when": "resourceFilename =~ /.cls/"
        }
      ],
      "editor/context": [
        {
          "command": "SFDX.soqlEditor",
          "when": "resourceFilename =~ /.cls/"
        }
      ]
    },
    "configuration": {
      "title": "Salesforce SOQL Editor",
      "properties": {
        "soqlEditor.displayEditor": {
          "type": "boolean",
          "default": true,
          "description": "If checked, the form is displayed."
        },
        "soqlEditor.format.automatically": {
          "type": "boolean",
          "default": false,
          "description": "If checked, the SOQL is formatted automatically when created using the form inputs."
        },
        "soqlEditor.fieldType.form": {
          "type": "boolean",
          "default": false,
          "description": "If checked, the form displays the field type between []. For instance, Name [STRING]."
        },
        "soqlEditor.fieldType.table": {
          "type": "boolean",
          "default": false,
          "description": "If checked, the table header displays the field type between []. For instance, Name [STRING]."
        },
        "soqlEditor.field.display.required": {
          "type": "boolean",
          "default": true,
          "description": "If checked, an icon appears to the right of the field label to indicate that it is Required."
        },
        "soqlEditor.field.display.updateable": {
          "type": "boolean",
          "default": true,
          "description": "If checked, an icon appears to the right of the field label to indicate that it is Updateable."
        },
        "soqlEditor.nestedResults.style": {
          "type": "boolean",
          "default": false,
          "description": "If checked, it applies styles to nested results. This feature makes everything slow when quering a lot of records and columns, so use it with care. Also, be aware that the Theme Colors you are using will not be applied because the VSCode API does not provide a way to programatically access it yet."
        },
        "soqlEditor.nestedResults.expanded": {
          "type": "boolean",
          "default": true,
          "description": "If checked, nested results are expanded."
        },
        "soqlEditor.nestedResults.depth": {
          "type": "number",
          "default": 1,
          "description": "It determines how many levels nested results shown as JSON will be expanded."
        },
        "soqlEditor.groupSelectedFields": {
          "type": "boolean",
          "default": true,
          "description": "If checked, the selected fields are grouped."
        },
        "soqlEditor.windowMode": {
          "type": "Boolean",
          "default": true,
          "description": "If checked, the SOQL Editor will open in a separate window."
        }
      }
    }
  },
  "scripts": {
    "dev": "webpack --config webpack.config.dev.js",
    "server": "cross-env NODE_ENV=development nodemon ./src/server/index.js localhost 5000",
    "test": "node ./node_modules/vscode/bin/test",
    "build": "node .build/build.js",
    "webpack": "webpack --config webpack.config.js"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.3",
    "dotenv-webpack": "^4.0.0",
    "eslint": "^5.13.0",
    "nodemon": "^2.0.7",
    "terser-webpack-plugin": "^4.2.3",
    "typescript": "^3.3.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@types/vscode": "^1.53.0",
    "applicationinsights": "^1.8.2",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dateformat": "^4.5.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "morgan-body": "^2.6.4",
    "node-machine-id": "^1.1.12",
    "objects-to-csv": "^1.3.6",
    "qs": "^6.9.4",
    "rotating-file-stream": "^2.1.3",
    "socket.io": "^2.4.1"
  }
}
